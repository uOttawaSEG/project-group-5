<resources>
    <!-- General App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/gray_background</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Button Style -->
    <style name="AppButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_button_with_shadow</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- EditText Style -->
    <style name="AppEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/rectangular_input_with_border</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/material_dynamic_neutral30</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>
