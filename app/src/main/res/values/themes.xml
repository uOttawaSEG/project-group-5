<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Day Mode -->
    <style name="Theme.ProjectGroup5" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/button_light_gray</item>
        <item name="colorPrimaryVariant">@color/button_light_gray</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Default Button Style -->
        <item name="buttonStyle">@style/CustomButtonStyle</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/gray_background</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/rounded_button_with_shadow</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
