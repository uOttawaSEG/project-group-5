<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:padding="16dp">

    <!-- Card Container for Event Entry -->
    <LinearLayout
        android:id="@+id/eventContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rectangular_input_with_border"
        android:elevation="4dp"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title and Status Icon Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Space -->
            <Space
                android:id="@+id/spaceWithinTheEventEntry"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <!-- Event Title -->
            <TextView
                android:id="@+id/eventTitleEntry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Event Title"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="8dp" />

            <!-- Status Icon -->
            <ImageView
                android:id="@+id/statusIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Status Icon"
                android:src="@drawable/baseline_info_outline_24"
                android:visibility="gone"
                app:tint="@color/quantum_yellow" />
        </LinearLayout>

        <!-- Event Description -->
        <TextView
            android:id="@+id/eventDescriptionEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangular_input_with_border"
            android:padding="16dp"
            android:text="Description"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:visibility="gone" />

        <!-- Start and End Time -->
        <EditText
            android:id="@+id/startTimeEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangular_input_with_border"
            android:padding="16dp"
            android:hint="Start Time"
            android:inputType="text"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textColorHint="@color/material_dynamic_neutral30" />

        <EditText
            android:id="@+id/endTimeEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangular_input_with_border"
            android:padding="16dp"
            android:hint="End Time"
            android:inputType="text"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textColorHint="@color/material_dynamic_neutral30" />

        <!-- Event Address -->
        <EditText
            android:id="@+id/eventAddressEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangular_input_with_border"
            android:padding="16dp"
            android:hint="Address"
            android:inputType="text"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textColorHint="@color/material_dynamic_neutral30"
            android:visibility="gone" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp">

            <!-- Reject Button -->
            <Button
                android:id="@+id/rejectUserButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_button_with_shadow"
                android:text="Reject"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="gone" />

            <!-- Accept Button -->
            <Button
                android:id="@+id/acceptUserButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_with_shadow"
                android:text="Accept"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
