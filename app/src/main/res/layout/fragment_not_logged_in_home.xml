<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:padding="16dp"
    tools:context=".ui.home.HomeNotLoggedInFragment">

    <!-- Title Text -->
    <TextView
        android:id="@+id/pending_list1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are not signed in"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle Text -->
    <TextView
        android:id="@+id/signInPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please sign in to access your account and features"
        android:textSize="16sp"
        android:textColor="@color/material_dynamic_neutral30"
        android:textAlignment="center"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/pending_list1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
