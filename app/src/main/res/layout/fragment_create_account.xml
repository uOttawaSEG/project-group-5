<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.CreateAccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/form_text_size"
        android:gravity="center"
        android:orientation="vertical">

        <Switch
            android:id="@+id/OrganizerVSUserSwitch"
            android:layout_width="wrap_content"
            android:layout_height="48sp"
            android:textSize="@dimen/form_text_size"
            android:text="@string/organizer"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <EditText
            android:id="@+id/editTextTextEmailAddressUserCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:textSize="@dimen/form_text_size"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:autofillHints="emailAddress" />

        <EditText
            android:id="@+id/editTextPhoneUserCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/phone"
            android:textSize="@dimen/form_text_size"
            android:ems="10"
            android:inputType="phone"
            android:autofillHints="phone" />

        <EditText
            android:id="@+id/editTextTextPostalAddressUserCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/address"
            android:textSize="@dimen/form_text_size"
            android:ems="10"
            android:inputType="textPostalAddress"
            android:autofillHints="postalAddress" />

        <EditText
            android:id="@+id/editTextTextPasswordUserCreate"
            android:layout_width="wrap_content"
            android:hint="@string/password"
            android:layout_height="wrap_content"
            android:textSize="@dimen/form_text_size"
            android:ems="10"
            android:inputType="textPassword"
            android:autofillHints="newPassword" />

        <EditText
            android:id="@+id/editTextTextConfirmPasswordUserCreate"
            android:layout_width="wrap_content"
            android:hint="@string/confirm_password"
            android:layout_height="wrap_content"
            android:textSize="@dimen/form_text_size"
            android:ems="10"
            android:inputType="textPassword"
            android:autofillHints="confirmPassword" />

        <EditText
            android:id="@+id/editTextTextUserCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/first_name"
            android:textSize="@dimen/form_text_size"
            android:ems="10"
            android:inputType="text"
            android:autofillHints="personGivenName"
            />

        <EditText
            android:id="@+id/editTextText2UserCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/form_text_size"
            android:ems="10"
            android:hint="@string/last_name"
            android:inputType="text"
            android:autofillHints="personFamilyName" />

        <EditText
            android:id="@+id/editTextTextOrganisation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="@dimen/form_text_size"
            android:inputType="text"
            android:visibility="gone"
            android:hint="@string/organisation"
            android:autofillHints="organization"
            />

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            tools:ignore="ExtraText">

            <Button
                android:id="@+id/cancelButtonCreate"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1sp"
                android:backgroundTint="@color/backbutton"
                android:shadowColor="@color/text_shadow_button_form"
                android:shadowDx="-2"
                android:shadowDy="5"
                android:shadowRadius="2"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/form_text_size" />

            <Button
                android:id="@+id/confirmCredentialAndCreateButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1sp"
                android:backgroundTint="@color/loginButton2"
                android:shadowColor="@color/text_shadow_button_form"
                android:shadowDx="-2"
                android:shadowDy="5"
                android:shadowRadius="2"
                android:text="@string/create"
                android:textColor="@color/white"
                android:textSize="@dimen/form_text_size" />
            />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
