<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    tools:context=".ui.home.OrganizerOptionSelector">

    <!-- Organizer Options Title -->
    <TextView
        android:id="@+id/organizerOptionsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Organizer Options"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/organizerOptionsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Create Event Button -->
        <Button
            android:id="@+id/EventCreateButton"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button_with_shadow"
            android:text="Create Event"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- My Events Button -->
        <Button
            android:id="@+id/organizer_view_event_list"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button_with_shadow"
            android:text="My Events"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- All Requests Button -->
        <Button
            android:id="@+id/organizer_event_requests"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:background="@drawable/rounded_button_with_shadow"
            android:text="All Requests"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
