<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.account.LoginFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/form_text_size"
            android:hint="@string/email"
            android:inputType="textWebEmailAddress" />

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="@dimen/form_text_size"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:inputType="textPassword" />

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelButton"
                style="?android:attr/buttonBarButtonStyle"
                android:backgroundTint="@color/backbutton"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:textSize="@dimen/form_text_size"
                android:layout_margin="1sp"
                android:shadowRadius="2"
                android:shadowDx="-2"
                android:shadowDy="5"
                android:shadowColor="@color/text_shadow_button_form"
                android:layout_height="wrap_content"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/confirmCredentialAndLoginButton"
                style="?android:attr/buttonBarButtonStyle"
                android:backgroundTint="@color/loginButton2"
                android:textColor="@color/white"
                android:textSize="@dimen/form_text_size"
                android:layout_margin="1sp"
                android:shadowRadius="2"
                android:shadowDx="-2"
                android:shadowDy="5"
                android:shadowColor="@color/text_shadow_button_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login" />
        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>