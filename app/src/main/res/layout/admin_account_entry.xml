<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:padding="16dp">

    <!-- Card Container -->
    <LinearLayout
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rectangular_input_with_border"
        android:padding="16dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/titleEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/black"
            android:visibility="gone" />

        <!-- First Name -->
        <TextView
            android:id="@+id/firstNameEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textSize="20sp"
            android:padding="8dp"
            android:textColor="@color/material_dynamic_neutral30" />

        <!-- Last Name -->
        <TextView
            android:id="@+id/lastNameEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textSize="20sp"
            android:padding="8dp"
            android:textColor="@color/material_dynamic_neutral30" />

        <!-- Email Address -->
        <TextView
            android:id="@+id/emailAddressEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textSize="20sp"
            android:padding="8dp"
            android:textColor="@color/material_dynamic_neutral30" />

        <!-- Phone Number -->
        <TextView
            android:id="@+id/phoneNumberEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="20sp"
            android:padding="8dp"
            android:textColor="@color/material_dynamic_neutral30" />

        <!-- Home Address -->
        <TextView
            android:id="@+id/homeAddressEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="20sp"
            android:padding="8dp"
            android:textColor="@color/material_dynamic_neutral30" />

        <!-- Organization Name -->
        <TextView
            android:id="@+id/organizationNameEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Organization Name"
            android:textSize="20sp"
            android:padding="8dp"
            android:textColor="@color/material_dynamic_neutral30"
            android:visibility="gone" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="16dp">

            <!-- Reject Button -->
            <Button
                android:id="@+id/rejectUserButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:textSize="14sp"
                android:background="@drawable/rounded_button_with_shadow"
                android:textColor="@color/white"
                android:visibility="gone" />

            <!-- Accept Button -->
            <Button
                android:id="@+id/acceptUserButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:textSize="14sp"
                android:layout_marginStart="16dp"
                android:background="@drawable/rounded_button_with_shadow"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
